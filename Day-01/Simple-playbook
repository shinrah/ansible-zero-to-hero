- name: hosting website
  hosts: web
  become: yes
  tasks:
    - name: install httpd
      yum:
        name: httpd*
        state: present
      when: ansible_facts['os_family']  == "RedHat"
      tags: install_httpd

    - name: start httpd service
      service:
        name: httpd
        state: started
      when: ansible_facts['os_family'] == "RedHat"
      tags: restart_httpd

    - name: copy source code
      copy:
        src: /root/code/index.html
        dest: /var/www/html/index.html
        owner: apache
        group: apache
        remote_src: no
      when: ansible_facts['os_family'] == "RedHat"
      notify: httpd_restart

    - name: change port number
      lineinfile:
        path: /etc/httpd/conf/httpd.conf
        regexp: '^Listen'
        line: Listen 8080
      when: ansible_facts['os_family'] == "RedHat"
      notify: httpd_restart

    - name: install firewall pkg
      yum:
        name:
          - python3-firewall
          - firewalld
        state: present


    - name: add port number
      firewalld:
        port: 8080/tcp
        permanent: yes
        state: enabled

    - name: reload firewalled
      service:
        name: firewalld
        state: started
        enabled: yes

  handlers:
   - name: httpd_restart
     service:
       name: httpd
       state: restarted




#######################################################################################################################

- name: generic playbook
  hosts: localhost
  become: yes
  tasks:
    - name: copy file
      copy:
        src: /root/imp
        remote_src: yes
        dest: /tmp
        mode: '0777'
        owner: 'rahul'
        group: 'rahul'
        backup: yes

    - name: fetch log from remote system
      fetch:
       src: /root/a
       dest: /tmp/
       flat: yes

    - name: create a file
      file:
        path: /tmp/abc
        state: touch

    - name: create a dir
      file:
        path: /tmp/india
        state: directory

    - name: exucute the script from remote server
      shell: 'sh /tmp/xyz.sh'
