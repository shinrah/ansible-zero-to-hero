---
- hosts: localhost
  become: yes
  tasks:
    - name: create a user
      user:
        name: rahul
        state: present
        shell: /bin/bash
        create_home: yes
        password: "{{ 'mcsa@1234' | password_hash('sha512') }}"

    - name: create a group
      group:
        name: developers
        state: present

    - name: add user to group
      user:
        name: rahul
        groups: developers
        append: yes

    - name: create a directory
      file:
        path: /tmp/rahul_dir
        state: directory
        owner: rahul
        group: developers
        mode: '0755'

    # -------- PASSWORD POLICY -------- #

    - name: Set password expire max days
      command: chage -M 30 rahul

    - name: Set password expire min days
      command: chage -m 5 rahul

    - name: Set password warning age
      command: chage -W 7 rahul

    - name: Set inactive days
      command: chage -I 10 rahul

    - name: Set account expiry date
      command: chage -E 2025-10-31 rahul
